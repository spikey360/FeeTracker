<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Add Tuition"
    android:background="#0771b8"
    />

<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Name"

	/>
<EditText
	android:id="@+id/edit_msg_text"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:hint="@string/edit_msg"
	 />

<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Fee"

	/>
<EditText
	android:id="@+id/edit_fee_text"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:hint="@string/edit_fee"
	android:inputType="number"
	 />
<Button
	android:id="@+id/add_tuition_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Add"
	android:onClick="insertTuition"
	/>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Pay to Tuition"
	android:background="#0771b8"
	/>
<Spinner
    android:id="@+id/tuition_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     />
<Spinner
    android:id="@+id/month_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     />
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Date"
	/>
<EditText
	android:id="@+id/edit_date"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:hint="@string/edit_date"
	 />

<Button
	android:id="@+id/pay_tuition_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Pay"
	android:onClick="payTuition"
	/>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="History"
	android:background="#0771b8"
	/>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<ListView
	android:id="@+id/history"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#ffffff"
	/>
</ScrollView>
</LinearLayout>
</ScrollView>
